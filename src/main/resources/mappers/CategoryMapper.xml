<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caoyang2002.qoobk.mapper.CategoryMapper">
  <select id="select" resultType="com.caoyang2002.qoobk.pojo.entity.Category">
      SELECT id,name FROM category
  </select>
    <!--删除分类-->
    <delete id="deleteById">
        DELETE FROM category
        WHERE id=#{id}
    </delete>

    <insert id="insert">
        INSERT INTO category
        VALUES(
               NULL,#{name}
              )
    </insert>

    <insert id="update">
        UPDATE category
        SET name=#{name}
        WHERE id=#{id}
    </insert>

</mapper>
